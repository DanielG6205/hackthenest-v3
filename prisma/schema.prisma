generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

// TODO: separate rsvp model with waiver uploads?
model User {
  email        String        @id
  qr           String        @unique
  checks       Check[]
  rsvp         Boolean       @default(false)
  hackerApp    HackerApp?
  volunteerApp VolunteerApp?
}

model HackerApp {
  firstName  String?
  lastName   String?
  phone      String?
  age        Int?
  yog        Int?
  school     String?
  country    String?
  diet       Diet[]
  shirt      String?
  experience String?
  outreach   String?
  conduct    Boolean?
  privacy    Boolean?
  user       User     @relation(fields: [userEmail], references: [email])
  userEmail  String   @id
}

model VolunteerApp {
  firstName String
  lastName  String
  phone     String
  age       Int
  role      String // volunteer, mentor, judge, sponsor
  origin    String // school/company
  diet      Diet[]
  shirt     String
  user      User   @relation(fields: [userEmail], references: [email])
  userEmail String @id
}

model Diet {
  diet                  String        @id
  hackerApp             HackerApp?    @relation(fields: [hackerAppUserEmail], references: [userEmail])
  hackerAppUserEmail    String        @unique
  volunteerApp          VolunteerApp? @relation(fields: [volunteerAppUserEmail], references: [userEmail])
  volunteerAppUserEmail String        @unique
}

model Check {
  check     String @id
  User      User   @relation(fields: [userEmail], references: [email])
  userEmail String @unique
}
