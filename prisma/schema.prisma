generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id           String        @id
  email        String        @unique
  checks       Check[]
  rsvp         Boolean       @default(false)
  hackerApp    HackerApp?
  volunteerApp VolunteerApp?
}

model HackerApp {
  firstName String
  lastName  String
  phone     String
  age       Int
  yog       Int
  school    String
  country   String
  diet      Diet[]
  shirt     String
  outreach  String
  user      User   @relation(fields: [userId], references: [id])
  userId    String @unique
}

model VolunteerApp {
  firstName String
  lastName  String
  phone     String
  age       Int
  role      String // volunteer, mentor, judge, sponsor
  origin    String // school/company
  diet      Diet[]
  shirt     String
  user      User   @relation(fields: [userId], references: [id])
  userId    String @unique
}

model Diet {
  diet               String        @unique
  hackerApp          HackerApp?    @relation(fields: [hackerAppUserId], references: [userId])
  hackerAppUserId    String        @unique
  volunteerApp       VolunteerApp? @relation(fields: [volunteerAppUserId], references: [userId])
  volunteerAppUserId String        @unique
}

model Check {
  check  String @unique
  User   User   @relation(fields: [userId], references: [id])
  userId String @unique
}
