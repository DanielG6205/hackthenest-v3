generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String?
  rsvp         Boolean
  hackerApp    HackerApp?
  volunteerApp VolunteerApp?
}

model HackerApp {
  firstName String
  lastName  String
  phone     String
  age       Int
  yog       Int
  school    String
  country   String
  diet      String
  shirt     String
  outreach  String
  user      User   @relation(fields: [userId], references: [id])
  userId    Int    @unique
}

model VolunteerApp {
  firstName String
  lastName  String
  phone     String
  age       Int
  role      String // volunteer, mentor, judge, sponsor
  diet      String
  shirt     String
  user      User   @relation(fields: [userId], references: [id])
  userId    Int    @unique
}
